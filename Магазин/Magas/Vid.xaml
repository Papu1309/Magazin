<Page x:Class="Магазин.Magas.aa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Magas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="BlueViolet"
      Title="Vid" >
    <Grid Margin="0,73,0,0" Background="Coral">
        <TextBlock Text="Автозапчасти"  HorizontalAlignment="Center"  FontSize="30" Margin="0,-63,0,382" />
        <ListView x:Name="SpicokListWiew">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Select" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                    <Image Source="{Binding Foto}" ></Image>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Price}" />
                </GridView>
            </ListView.View>

        </ListView>

        <Button Content="Корзина" x:Name="Korzina" Click="Korzina_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Background="Gold" Width="60" Height="60"/>
    </Grid>
</Page>