<Page x:Class="Магазин.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage" Background="PeachPuff" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация"
               FontSize="35"
               VerticalAlignment="Top"
               Grid.Column="2"
               Grid.ColumnSpan="3"
               TextAlignment="Center"
                    Foreground="Purple"
 FontWeight="Bold" Margin="0,33,133,0" />
        <TextBlock Text="Логин"
        FontSize="16"
        Grid.Column="2"
        Grid.Row="1"
        TextAlignment="Center"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
                   FontStyle="Italic" Grid.ColumnSpan="2"/>
        <TextBox x:Name="loginTb"
             FontSize="22"
             Grid.Column="2"
             Grid.Row="1"       
             Grid.ColumnSpan="2"
             Height="40"
             VerticalAlignment="Center"
             Padding="5"/>
        <TextBlock Text="Пароль"
FontSize="17"
Grid.Column="2"
Grid.Row="2"
TextAlignment="Center"
HorizontalAlignment="Left"
VerticalAlignment="Top"
                   FontStyle="Italic" RenderTransformOrigin="1.503,0.583" Grid.ColumnSpan="2" Margin="104,0,0,0"/>
        <TextBox x:Name="ParolTb"
             FontSize="22"
             Grid.Column="2"
             Grid.Row="2"       
             Grid.ColumnSpan="3"
             Height="40"
             VerticalAlignment="Top"
             Padding="5" Margin="0,28,133,0"/>
        <Button x:Name="btnRegOchova" Grid.Column="1"
        Grid.Row="3"       
        Grid.ColumnSpan="3"
        FontSize="18"
        Height="50" Content="Зарегистрироваться" 
        Background="Azure"
        FontFamily="Calibri" Click="btnRegOchova_Click" Margin="133,0,0,40" />

    </Grid>
</Page>
