<Page x:Class="Магазин.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage" Background="PeachPuff" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
           
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация"
               FontSize="35"
               VerticalAlignment="Top"
               Grid.Column="2"
               Grid.ColumnSpan="2"
                   
                   HorizontalAlignment="Center"
               TextAlignment="Center"
                    Foreground="Purple"
 FontWeight="Bold" Margin="5,10,14,4" />
        <TextBlock Text="Логин"
        FontSize="16"
        Grid.Column="2"
        Grid.Row="1"
                   Grid.ColumnSpan="2"
             HorizontalAlignment="Center"
        
        
                   FontStyle="Italic"  Margin="0,16,0,0" Width="243" />
        <TextBox x:Name="loginTb"
             FontSize="22"
             Grid.Column="1"
             Grid.Row="1"
             Height="40"
             HorizontalAlignment="Center"
 Margin="132,50,1,0" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
        <TextBlock Text="Пароль"
FontSize="17"
Grid.Column="2"
Grid.Row="2"
VerticalAlignment="Center"
HorizontalAlignment="Center"
                   FontStyle="Italic" RenderTransformOrigin="1.503,0.583" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ParolTb"
             FontSize="22"
             Grid.Column="2"
             Grid.Row="2"       
             Grid.ColumnSpan="2"
             Height="40"
             VerticalAlignment="Top"
             Padding="5" Margin="0,72,1,0" Grid.RowSpan="3"/>
        <Button x:Name="btnRegOchova" Grid.Column="1"
        Grid.Row="3"       
        Grid.ColumnSpan="3"
        FontSize="18"
        Height="50" Content="Зарегистрироваться" 
        Background="Azure"
        FontFamily="Calibri" Click="btnRegOchova_Click" Margin="132,63,1,37" Grid.RowSpan="2" />

    </Grid>
</Page>
